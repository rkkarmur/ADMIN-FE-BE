{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@alias/*": ["alias/*"],
      "@store/*": ["store/*"],
       "@store": ["store/index.ts"], 
       "@config/*": ["config/*"] 
    }
  },
  "include": ["src"]
}
